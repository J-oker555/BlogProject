{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td> 
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">{{ categorie.titre }}</a>
                </td>
                <td>
            {% if is_granted('ROLE_ADMIN') %}
                <p>
                    <a class="btn btn-primary" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Edit</a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </p>
            {% endif %}
</td>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary" href="{{ path('app_categorie_new') }}">Add New Categorie</a>
    {% endif %}
{% endblock %}
