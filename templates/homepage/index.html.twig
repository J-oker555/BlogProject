{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h2>Dernières catégories</h2>
<ul>
    {% for categorie in lastCategories %}
        <li><a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">{{ categorie.titre }}</a></li>
    {% endfor %}
</ul>

{% if is_granted('ROLE_ADMIN') %}
    <h2>Actions administratives</h2>
    <ul>
        <li><a href="{{ path('app_categorie_new') }}">Créer une catégorie</a></li>
        <li><a href="{{ path('app_article_new') }}">Créer un article</a></li>
        <li><a href="{{ path('app_commentaire_index') }}">Afficher tous les commentaires</a></li>

    </ul>
{% endif %}

{% endblock %}

